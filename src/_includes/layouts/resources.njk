{% extends "layouts/base.njk" %}

{% set bodyClass = "resources" %}

{% block pageHeader %}
<header>
    <h1>{{ title }}</h1>
</header>
{% endblock %}

{% block content %}
{% if resources.length %}
    {% for item in resources %}
        <article class="entry">
            <h2>{{ item.data.title }}</h2>
            <p class="metadata">By <span class="author">{{ item.data.author if item.data.author else "the Coding to Learn and Create Team" }}</span> &middot; Posted <time datetime="{{ item.data.date | isoDate }}" class="dt-published">{{ item.data.date | formatDate }}</time></p>
            {% if item.data.description %}
            <p>{{ item.data.description | safe }}</p>
            {% endif %}
            <p><a href="{{ item.url }}">Read more<span class="visually-hidden"> of &ldquo;{{ item.data.title }}&rdquo;</span></a></p>
        </article>
    {% endfor %}
{% endif %}
{% endblock %}
