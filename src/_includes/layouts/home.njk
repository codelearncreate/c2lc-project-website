{% extends "layouts/base.njk" %}

{% set bodyClass = "home" %}

{% block pageHeader %}
    <h1>{{ title }}</h1>
    <p class="[ subtitle ] [ prose ]"><span class="[ bg--green-85 ]">{{ subtitle | safe }}</span></p>
    <p class="[ sm:center ]"><a class="call-to-action" rel="external" href="{{ headerCallToActionLink }}">{{ headerCallToActionText }}</a></p>
{% endblock %}

{% block content %}
<div>
  <div class="[ wrapper ]">
    <h2 class="[ center ]">{{ createSection.title }}</h2>
    <div class="[ switcher ]">
        <div>
          {% for card in createSection.cards %}
            <div class="[ card card--small card--yellow-75 ]">
                  {% if card.image %}
                <figure class="[ card__image ]">
                  <picture>
                    <img src="{{ card.image }}?nf_resize=smartcrop&w=333&h=240" alt="" width="333" height="240">
                  </picture>
                </figure>
                {% endif %}
                <div class="[ card__content ] [ flow ]">
                    <h3><a href="{{ card.link }}">{{ card.title }}</a></h3>
                </div>
            </div>
          {% endfor %}
        </div>
    </div>
  </div>
</div>
<div class="[ bg bg--yellow-85 ]">
  <div class="[ wrapper ]">
    <div class="[ two:three ]">
        <div class="[ two:three__two ] [ flow ]">
            <h2>{{ learnSection.title }}</h2>
            {{ learnSection.content | markdown | safe }}
            <p class="[ sm:center ]"><a class="call-to-action" href="{{ learnSection.callToActionLink }}">{{ learnSection.callToActionText }}</a></p>
        </div>
        <div class="[ two:three__three ] [ flow ]">
          <picture>
            <source srcset="{{ learnSection.image }}?nf_resize=smartcrop&w=640&h=520" media="(min-width: 768px)">
            <img src="{{ learnSection.image }}?nf_resize=smartcrop&w=320&h=260" alt="{{ learnSection.imageAlt }}" width="640" height="520">
          </picture>
        </div>
    </div>
  </div>
</div>
<div class="[ bg bg--red-75 ]">
  <div class="[ wrapper ]">
    <div class="[ three:two ]">
        <div class="[ three:two__three ] [ flow ]">
          <picture>
            <source srcset="{{ aboutSection.image }}?nf_resize=smartcrop&w=640&h=520" media="(min-width: 768px)">
            <img src="{{ aboutSection.image }}?nf_resize=smartcrop&w=320&h=260" alt="{{ aboutSection.imageAlt }}" width="640" height="520">
          </picture>
        </div>
        <div class="[ three:two__two ] [ flow ]">
          <h2>{{ aboutSection.title }}</h2>
            {{ aboutSection.content | markdown | safe }}
            <p class="[ sm:center ]"><a class="call-to-action" href="{{ aboutSection.callToActionLink }}">{{ aboutSection.callToActionText }}</a></p>
        </div>
    </div>
  </div>
  <svg class="[ wave wave--bottom ]" viewBox="0 0 1437 52" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M824.685 0C1036.3 0 1325.5 31.333 1441 52H.078C82.042 52 560.164 0 824.685 0z" fill="var(--color-green-85)"/></svg>
</div>
<div class="[ bg bg--green-85 ]">
  <div class="[ wrapper ]">
    <div class="[ center flow ]">
      <h2><a rel="external" href="{{ trySection.titleLink }}">{{ trySection.title }}</a></h2>
      {{ trySection.content | markdown | safe }}
    </div>
  </div>
</div>
{% endblock %}
