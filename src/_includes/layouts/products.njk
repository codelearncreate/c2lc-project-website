{% extends "layouts/base.njk" %}

{% set bodyClass = "products" %}

{% block content %}
<div id="products"></div>
<noscript class="[ flow ] [ flow-md ]">
{% if products.length %}
    {% for item in products | reverse %}
        <article class="[ product ] [ two:three ]">
            <div class="[ three:two__three ]">
                {% svgPlaceholder "570", "380" %}
            </div>
            <div class="[ three:two__two ] [ flow ]">
                <h2>{{ item.data.title }}</h2>
                <p class="[ metadata ]">By <span class="[ manufacturer ]">{{ item.data.manufacturer }}</span> &middot; <span class="[ category ]">{{ item.data.category }}</span></p>
                {% if item.data.description %}
                <p>{{ item.data.description | safe }}</p>
                {% endif %}
                <p><a href="{{ item.url }}">Available learning resources<span class="[ visually-hidden ]"> for &ldquo;{{ item.data.title }}&rdquo;</span></a></p>
            </div>
        </article>
    {% endfor %}
    {% if pagination.pages.length > 1 %}
    {% include "partials/components/pagination.njk" %}
    {% endif %}
{% else %}
<p>No events found.</p>
{% endif %}
</noscript>
<script type="module" src="/assets/scripts/products.module.js"></script>
{% endblock %}
